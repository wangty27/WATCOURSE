/* pages/bookmark/bookmark.wxss */
.result-header{
  width: 100vw;
  display: flex;
  flex-direction: column;
  background: #ffd54f;
  border-bottom: 0.5vw solid rgb(16, 109, 216);
  box-shadow: 0 0.5vw 0.5vw #111111;
  z-index: 100;
  padding-top: 1.5vh;
}


.header{
  height: 5vh;
  width: 100vw;
  font-size: 3.5vh;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: center;
  font-weight: bold;
}

.header-text{
  width: 80%;
  height: inherit;
  text-align: center;
}

.header-side{
  width: 10%;
  height: inherit;
  display: flex;
  justify-content: center;
  align-items: center;
}

.header-refresh{
  height: 4vh;
  width: 4vh;
}

.result-list{
  height: 92vh;
  width: 98vw;
  font-size: 2.1vh;
}

.result-list-item{
  margin-top: 1vh;
  margin-bottom: 2vh;
  width: 94vw;
  border: 0.5vw solid rgb(16, 109, 216);
  padding: 1.5vw;
  background: #fdfdfd;
  box-shadow: 0 0.5vw 0.5vw #111111;
}

.item-row{
  height: 3vh;
  width: inherit;
  display: flex;
  flex-direction: row;
  margin-top: 0.25vh;
  margin-bottom: 0.25vh;
}

.item-remove{
  height: 3.5vh;
  width: 3.5vh;
}

.item-hover{
  opacity: 0.6;
}

.item-note{
  width: inherit;
  margin-top: 0.25vh;
  margin-bottom: 0.25vh;
}

.item-class-list{
  padding: 1.5vw;
  border: 2rpx solid rgb(16, 109, 216);
  margin-top: 0.25vh;
  margin-bottom: 0.25vh;
}

.item-weekday{
  margin-top: 5rpx;
  width: 20%;
  height: inherit;
  border: 2rpx solid rgb(16, 109, 216);
  border-right: 0.001rpx solid transparent;
}

.item-bookmark{
  width: 10%;
  height: inherit;
  display: flex;
  align-items: center;
  justify-content: center;
}

.item-bookmark-image{
  width: 3vh;
  height: 3vh;
}

.item-weekday-selected{
  width: 100%;
  height: inherit;
  background: rgb(16, 109, 216);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  border-right: 0.001rpx solid rgb(16, 109, 216);
}

.item-weekday-normal{
  width: 100%;
  height: inherit;
  display: flex;
  align-items: center;
  justify-content: center;
  border-right: 0.001rpx solid transparent;
}

.item-reserve-list{
  display: flex;
  flex-direction: column;
  padding: 1.5vw;
  border: 2rpx solid rgb(16, 109, 216);
  margin-top: 0.25vh;
  margin-bottom: 0.25vh;
}

.item-button-group{
  height: 5vh;
  width: inherit;
  display: flex;
  flex-direction: row;
  margin-top: 1vh;
}

.item-button{
  height: 95%;
  width: 30%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 2.4vh;
  background: white;
  border: 2rpx solid rgb(16, 109, 216);
  color: rgb(16, 109, 216);
}

.item-button-hover{
  background: #dfdfdf;
}

.bookmark-tutorial{
  height: 94vh;
  width: 98vw;
  font-size: 2.1vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bookmark-tutorial-image{
  height: 90%;
  width: 77%;
}

